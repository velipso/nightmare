
include 'nightmare' # required
using music

reset 0, 50
tempo 0, 4, 4, 120
var t = 0
var chords = {
	{0, 4, 7}, # major chord
	{0, 3, 7}  # minor chord
}
for var m: range 10
	var base = (note 'C3') + rand.int % 24
	var ch = rand.pick chords
	var nb = (note 'C1') + base % 12
	var len = 25 * (2 + rand.int % 2)
	noteplay t, len, nb
	for var offset: ch
		var n = base + offset
		var mix = rand.int % 10
		noteplay t + mix, len, n
	end
	t += len
end
