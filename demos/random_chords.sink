
include 'nightmare' # required
using music

reset 0, 1
tempo 0, 10000
var t = 0
var chords = {
	{0, 4, 7}, # major chord
	{0, 3, 7}  # minor chord
}
for var m: range 10
	var base = (note 'C3') + rand.int % 24
	var ch = rand.pick chords
	var nb = (note 'C1') + base % 12
	var len = 25 * (2 + rand.int % 2)
	noteon t, 0, nb
	noteoff t + len, 0, nb
	for var offset: ch
		var n = base + offset
		var mix = rand.int % 10
		noteon t + mix, 0, n
		noteoff t + mix + len, 0, n
	end
	t += len
end
